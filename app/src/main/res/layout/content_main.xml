<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_main_info" />

    <Button
        android:id="@+id/btn_main_android_package_helper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_main_android_package_helper" />

    <TextView
        android:layout_width="21dp"
        android:layout_height="28dp"
        android:textSize="@dimen/mdl_size_tv_ordinary"
        android:gravity="center_horizontal"
        android:textColor="@color/md_white"
        android:singleLine="true"
        android:maxLength="1"
        android:background="@drawable/bg_text_flag_triangle_red"
        android:text="1" />
</LinearLayout>
